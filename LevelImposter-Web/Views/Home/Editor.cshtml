@{
	Layout = "_BlankLayout";
	ViewData["Title"] = "Editor - Level Imposter";
}

<!--    Headers    -->
<div class="header-1">
	<a href="/"><img src="~/img/favicon.png" /></a>
	<a href="#" class="text-light ml-2" id="map-name">Untitled Map</a>
	<input class="form-control ml-2" id="map-name-input" value="Untitled map" maxlength="30" />
	<p class="float-right" id="debug"></p>
	<button type="button" class="btn btn-outline-light float-right mt-2" id="settings-btn">
		<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-gear-wide-connected" viewBox="0 0 16 16">
			<path d="M7.068.727c.243-.97 1.62-.97 1.864 0l.071.286a.96.96 0 0 0 1.622.434l.205-.211c.695-.719 1.888-.03 1.613.931l-.08.284a.96.96 0 0 0 1.187 1.187l.283-.081c.96-.275 1.65.918.931 1.613l-.211.205a.96.96 0 0 0 .434 1.622l.286.071c.97.243.97 1.62 0 1.864l-.286.071a.96.96 0 0 0-.434 1.622l.211.205c.719.695.03 1.888-.931 1.613l-.284-.08a.96.96 0 0 0-1.187 1.187l.081.283c.275.96-.918 1.65-1.613.931l-.205-.211a.96.96 0 0 0-1.622.434l-.071.286c-.243.97-1.62.97-1.864 0l-.071-.286a.96.96 0 0 0-1.622-.434l-.205.211c-.695.719-1.888.03-1.613-.931l.08-.284a.96.96 0 0 0-1.186-1.187l-.284.081c-.96.275-1.65-.918-.931-1.613l.211-.205a.96.96 0 0 0-.434-1.622l-.286-.071c-.97-.243-.97-1.62 0-1.864l.286-.071a.96.96 0 0 0 .434-1.622l-.211-.205c-.719-.695-.03-1.888.931-1.613l.284.08a.96.96 0 0 0 1.187-1.186l-.081-.284c-.275-.96.918-1.65 1.613-.931l.205.211a.96.96 0 0 0 1.622-.434l.071-.286zM12.973 8.5H8.25l-2.834 3.779A4.998 4.998 0 0 0 12.973 8.5zm0-1a4.998 4.998 0 0 0-7.557-3.779l2.834 3.78h4.723zM5.048 3.967c-.03.021-.058.043-.087.065l.087-.065zm-.431.355A4.984 4.984 0 0 0 3.002 8c0 1.455.622 2.765 1.615 3.678L7.375 8 4.617 4.322zm.344 7.646.087.065-.087-.065z" />
		</svg>
	</button>
	<button type="button" class="btn float-right mt-2 warning-btn" id="warning-btn" data-toggle="collapse" data-target="#warning" aria-expanded="false" aria-controls="warning">
		<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#ffec52" class="bi bi-exclamation-triangle-fill" viewBox="0 0 16 16">
			<path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
		</svg>
	</button>
</div>
<div class="header-2 gborder">
	<button type="button" class="btn btn-outline-danger" id="trash" disabled>
		<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
			<path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
			<path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
		</svg>
	</button>

	<button type="button" class="btn btn-outline-light float-right" id="export">Export Map</button>
	<button type="button" class="btn btn-outline-light float-right" id="import">Import Map</button>
	<button type="button" class="btn btn-outline-light float-right" id="add-img">Add Sprite</button>
</div>

<!--    Left Panel    -->
<div class="panel float-left panel-transition" id="left-panel">
	<div class="inner-panel" id="prop-list">
	</div>
</div>
<button class="close-btn left-btn panel-transition" id="left-btn">
	<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-caret-left-fill" viewBox="0 0 16 16">
		<path d="M3.86 8.753l5.482 4.796c.646.566 1.658.106 1.658-.753V3.204a1 1 0 0 0-1.659-.753l-5.48 4.796a1 1 0 0 0 0 1.506z" />
	</svg>
</button>

<!--    Right Panel    -->
<div class="panel float-right panel-transition" id="right-panel">
	<select class="custom-select item-select" id="item-dropdown">
	</select>
	<div class="inner-panel" id="item-list">
	</div>
</div>
<button class="close-btn right-btn panel-transition" id="right-btn">
	<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-caret-right-fill" viewBox="0 0 16 16">
		<path d="M12.14 8.753l-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z" />
	</svg>
</button>

<!--    Canvas    -->
<canvas id="licanvas" class="canvas"></canvas>

<!--    Upload    -->
<div class="upload-bg" id="upload-bg"></div>
<div class="upload-window" id="upload-window">
	<button class="x-btn" id="upload-exit">
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
			<path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
		</svg>
	</button>
	<h3 id="upload-name">Upload</h3>
	<input class="form-control" type="file" id="file-input" />
	<button class="btn btn-light" id="upload-btn">Upload</button>
</div>

<!--    Settings    -->
<div class="settings-window" id="settings-window">
	<button class="x-btn" id="settings-exit">
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
			<path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
		</svg>
	</button>
	<h3>Settings</h3>
	<div class="form-group">
		<hr />
		<h5>Map Button</h5>
		<p>146x47 Reccommended</p>
		<img src="~/img/custombtn.png" class="mb-3 black-bg" width="146" id="settings-btn-img" />
		<input type="file" class="form-control-file" id="settings-upload1">
		<button class="btn btn-primary mt-3" id="settings-btn-default">Set Default</button>
	</div>
	<div class="form-group">
		<hr/>
		<h5>Exile Type</h5>
		<select class="form-control" id="settings-exile-type">
			<option value="0">Skeld</option>
			<option value="1">Mira</option>
			<option value="2">Polus</option>
			<option value="3">Airship</option>
		</select>
	</div>
</div>

<!--    Warning Panel    -->
<div id="warning" class="warning collapse">
	<div class="card card-body">
		<h5>Warnings:</h5>
		<hr />
		<div id="warnings" class="warnings">

		</div>
	</div>
</div>

<!--    Undersized    -->
<div id="undersize" class="undersize">
	<img src="~/img/logo-high.png" width="200px" /> <br />
	LevelImposter does not support phones or <br />other devices with smaller screens.<br />Please use a bigger screen and try again.
</div>

<!--    Javascript    -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script type="module" src="~/js/LevelImposter.js" asp-append-version="true"></script>
